---
import Layout from '~/layouts/PageLayout.astro';

import HeroCode2 from '~/components/widgets/HeroCode2.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import TestimonialList from '~/components/common/TestimonialList.astro';
import CodeTabs from '~/components/widgets/CodeTabs.astro';

const metadata = {
  title: 'MailPace - Fast Transactional Email',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <HeroCode2
    actions={[
      {
        variant: 'primary',
        text: 'Start Sending',
        href: 'https://app.mailpace.com',
        target: '_blank',
        icon: 'tabler:bolt',
      },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="title"> Fast Transactional Email </Fragment>

    <Fragment slot="subtitle"> Independent, privacy-focused, and hosted in the EU </Fragment>
  </HeroCode2>

  <Note />

  <TestimonialList />

  <CodeTabs />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="We have everything you need to send and recieve transactional emails"
    subtitle="Features"
    items={[
      {
        title: 'HTTP API',
        description: 'Integrate anywhere with our rapid HTTP API for efficient and reliable email delivery.',
        icon: 'tabler:api',
        callToAction: {
          text: 'Learn More',
          href: 'https://docs.mailpace.com/reference/overview',
          target: '_blank',
          class: 'text-muted text-sm',
        },
      },
      {
        title: 'SMTP Endpoint',
        description: 'Utilize our SMTP endpoint to send directly from any SMTP supported application or service',
        icon: 'tabler:mail',
        callToAction: {
          text: 'Learn More',
          href: 'https://docs.mailpace.com/integrations/smtp',
          target: '_blank',
          class: 'text-muted text-sm',
        },
      },
      {
        title: 'Inbound Email',
        description: 'Receive and turn inbound emails into JSON webhooks effortlessly with our inbound email service.',
        icon: 'tabler:inbox',
        callToAction: {
          text: 'Learn More',
          href: 'https://docs.mailpace.com/guide/inbound',
          target: '_blank',
          class: 'text-muted text-sm',
        },
      },
      {
        title: 'Webhooks',
        description: 'Stay updated with real-time notifications using our powerful webhooks.',
        icon: 'tabler:webhook',
        callToAction: {
          text: 'Learn More',
          href: 'https://docs.mailpace.com/guide/webhooks',
          target: '_blank',
          class: 'text-muted text-sm',
        },
      },
      {
        title: 'DKIM, SPF & DMARC',
        description: 'Send with confidence with support for custom Return-Path and full DMARC support.',
        icon: 'tabler:webhook',
        callToAction: {
          text: 'Learn More',
          href: 'https://docs.mailpace.com/guide/verification',
          target: '_blank',
          class: 'text-muted text-sm',
        },
      },
      {
        title: 'Automatic Email Optimization',
        description: 'Emails sent through MailPace are compressed and rebuilt for deliverability and speed.',
        icon: 'tabler:webhook',
        callToAction: {
          text: 'Learn More',
          href: 'https://docs.mailpace.com/',
          target: '_blank',
          class: 'text-muted text-sm',
        },
      },
      {
        title: 'Spam Protection with Automated Blocklist Management',
        description:
          'Protect your domain reputation and maximise deliverability with our outbound spam protection and automated bounce management.',
        icon: 'tabler:shield-check',
        callToAction: {
          text: 'Learn More',
          href: 'https://docs.mailpace.com/guide/lifecycle',
          target: '_blank',
          class: 'text-muted text-sm',
        },
      },
      {
        title: 'Idempotent API',
        description: 'Ensure safe and repeatable sending with our idempotent request handling.',
        icon: 'tabler:repeat',
        callToAction: {
          text: 'Learn More',
          href: 'https://docs.mailpace.com/guide/idempotency',
          target: '_blank',
          class: 'text-muted text-sm',
        },
      },
    ]}
  />

  <Features2
    title="What makes MailPace different"
    subtitle="Why we are what you need"
    items={[
      {
        title: 'Transactional only',
        description:
          "MailPace can only be used for Transactional Email - think password resets, notifications and welcome emails. We don't mix them up with slow, bulk marketing emails like other providers.",
        icon: 'tabler:mail',
      },
      {
        title: 'A real email provider',
        description:
          "We're not just an API layer to another email service. We run our own SMTP servers, the way email was designed",
        icon: 'tabler:server',
      },
      {
        title: 'Engineer lead support',
        description:
          "We don't do helpdesks, NPS scores and clueless support scripts. Email us anytime and an engineer will get back within a few hours: support@mailpace.com",
        icon: 'tabler:headset',
      },
      {
        title: 'Fully Independent',
        description:
          "We're not owned by a billionaire, we're a small, independent company helping to get Transactional Emails to inboxes for our customers ",
        icon: 'tabler:building',
      },
      {
        title: 'Developer First',
        description:
          'Our API and interface is super simple & easy to use, and we have code libraries and integrations for most frameworks ready to go ',
        icon: 'tabler:code',
      },
      {
        title: 'No Read Tracking',
        description:
          "We refuse to invade a person's privacy. Unlike other transactional email providers, we donâ€™t support spy pixels or click tracking",
        icon: 'tabler:eye-off',
      },
      {
        title: 'We HATE spam',
        description:
          'We have a five-layer approach to ensuring that our service is never used for spam. Keeping our reputation high and inboxes cleaner',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Fast!',
        description:
          ' Our Transactional Emails arrive in seconds, and we continuously monitor and optimize our time to inbox scores to get emails to inboxes fast!',
        icon: 'tabler:clock',
      },
      {
        title: 'Eco-Friendly',
        description:
          'We use 100% carbon-neutral, renewable energy powered servers. Our servers are provided by local bare-metal & VPS providers, not massive cloud companies',
        icon: 'tabler:leaf',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Inside template"
    title="AstroWind's Blueprint: Fun Meets Functionality!"
    items={[
      {
        title: 'Built on top of Astro 4.0',
        description:
          'Benefiting from the performance and developer-friendly features of this modern static site generator.',
      },
      {
        title: 'Styled using Tailwind CSS',
        description:
          'Facilitating rapid design and consistent styling with this highly popular utility-first CSS framework.',
      },
      {
        title: 'Cross-browser compatibility',
        description:
          'Ensure your website looks and functions consistently across various web browsers, delivering a seamless experience to all users.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on modern foundations</h3>
      Gain a competitive advantage by incorporating industry leading practices
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'High level of customization',
        description: `Tailor the template effortlessly to match your brand's identity and requirements, making your website distinct and saving you time.`,
      },
      {
        title: 'Multiple layout possibilities',
        description:
          'Explore various layout options to find the structure that best presents your content, enhancing user engagement and navigation.',
      },
      {
        title: 'Fully responsive design',
        description:
          "Ensure your website's optimal performance on various devices and screen sizes, providing a consistent and enjoyable user experience.",
      },
      {
        title: 'Integration of media',
        description:
          'Seamlessly incorporate images, videos, and multimedia elements that enhance your content and engage visitors effectively.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">Ensure your online presence truly represents you.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Enhanced user engagement',
        description:
          'Captivate your audience with interactive elements, intuitive navigation, and visually appealing layouts, encouraging longer visits.',
      },
      {
        title: 'Continuous improvement',
        description:
          'Ensure your website stays aligned with the latest trends and technologies through regular updates and enhancements.',
      },
      {
        title: 'Time and resource efficiency',
        description:
          'Skip the time-consuming process of building a website from scratch and launch your online presence sooner with AstroWind.',
      },
      {
        title: 'Community support',
        description: `Join the growing AstroWind community for insights, resources, and assistance, ensuring you're never alone on your web development journey.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">Designed to foster growth and success.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why MailPace?',
        description: '...',
      },
      {
        title: 'Can I send Marketing Emails with MailPace?',
        description: 'No. Only Transactional Emails are supported. ',
      },
      {
        title: 'Do you support my code library or framework?',
        description: "Probably! If you can't find what you need in our Docs, reach out to us at support@mailpace.com ",
      },
      {
        title: 'I need to send more than 1.5 million emails/month',
        description: 'Contact us for a bespoke quote.',
      },
    ]}
  />

  <Stats
    stats={[
      { title: 'Founded', amount: '2020' },
      { title: 'Emails Sent', amount: '200m+' },
      { title: 'Senders', amount: '2k+' },
    ]}
  />

  <CallToAction
    title="Ready to send?"
    actions={[
      {
        variant: 'primary',
        text: 'Start Sending',
        href: 'https://app.mailpace.com',
        target: '_blank',
        icon: 'tabler:bolt',
      },
    ]}
  />
</Layout>
